<!DOCTYPE html>
<html>
  <head>
    <title>AssesmentFinal</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

	 <% if logged_in?  %>
	  <div>
	    <%= current_user.first_name %> | <%= link_to "sig out", sign_out_path, method: :delete, data: { confirm: "sign out" } %>
	  </div>
	<% else %>
	  <div>
	    <%= link_to "sign up", sign_up_path %> | <%= link_to "login", sign_in_path %>
	  </div>
	<% end  %>

  <body>
    <%= yield %>
  </body>
</html>
